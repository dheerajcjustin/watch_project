<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#otpVarify">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="otpVarify" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="card-body py-5 px-md-5">

                <div class="form-outline mb-4">
                    <div class="text-center">
                        <label class="form-label" for="loginEmail">Enter the OTP</label>
                    </div>
                    <input type="text" id="otpText" class="form-control" name="otpText" placeholder="OTP" />
                </div>

                <!-- Submit button -->
                <div class="text-center">
                    <h5 style="color: coral;" id="otpAlert" class="mb-3"></h5>
                    <button type="button" class="btn btn-primary btn-block mb-4 " id="otpButton">
                        Verify
                    </button>

                    <button type="button" class="btn btn-secondary" id="resendOTPbutton">
                        ReSend OTP</button>
                </div>




            </div>
        </div>

    </div>
</div>
</div>