    <!-- Offcanvas Menu Begin -->
    <%- include("./partials/header.ejs") %>
        <!-- Header Section End -->
        <!-- Breadcrumb Section Begin -->
        <section class="breadcrumb-option">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb__text">
                            <h4>Check Out</h4>
                            <div class="breadcrumb__links">
                                <a href="/">Home</a>
                                <a href="/product">Shop</a>
                                <span>Check Out</span>
                            </div>
                        </div>
                    </div>
