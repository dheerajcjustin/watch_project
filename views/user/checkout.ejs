        <section class="checkout spad">
            <div class="container">
                <div class="checkout__form">
                    <div class="row">
                        <div class="col-lg-8 col-md-6">
                            <form action="/orderRedirect" method="post" id="addresForm">
                                <div class="table-responsive">
                                    <table class="table custom-table" style="background-color:#F3F2EE;">
                                        <thead>
                                            <tr>
                                                <th>num</th>
                                                <th>
                                                </th>
                                                <th>address</th>
                                                <th>Edit</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% let i=0; for( add of address) { %>
                                                <tr>
                                                    <td>
                                                        <%= i+1 %>
                                                    </td>
                                                    <th>
                                                        <label class="control control--checkbox">
                                                            <input type="radio" value="<%=add._id%>%>"
                                                                name="addressIndex" <%if(i===0){ %>
                                                            checked<% } %>
                                                                />
                                                                <div class="control__indicator"></div>
                                                        </label>
                                                    </th>
                                                    <td>
                                                        <h5 style="font-weight:bolder ;">
                                                            <%= add.name %>,
                                                        </h5>
                                                        <h5>
                                                            add <%= add.address %> addd, <%= add.town %>,<%= add.state
                                                                        %> ,<%= add.country %>
                                                        </h5>
                                                        <h6> pin: <%= add.pin %>
                                                        </h6>
                                                        <h6> phone: <%= add.phone %>
                                                        </h6>
                                                    </td>
                                                    <td>
                                                        <button type="button" class="btn btn-primary"
                                                            data-toggle="modal" data-target="#editModal"
                                                            onclick="edit('<%=add.name%>','<%=add.address%>','<%=add.town%>','<%=add.state%>','<%=add.country%>','<%=add.pin%>','<%=add.phone%>','<%=add._id%>')">
                                                            Edit Address
                                                        </button>
                                                    </td>
                                                </tr>
                                                <%i++; } %>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="row">
                                    <button type="button" class="btn btn-primary" data-toggle="modal"
                                        data-target="#myModal">
                                        Add Address
                                    </button>
                                    <br>
                                    <h6>
                                        <%= meg %>
                                    </h6>
                                </div>
                        </div>
                        <div class="col-lg-4 col-md-6">

                            <div class="checkout__order">
                                <h4 class="order__title">Your order</h4>
                                <div class="checkout__order__products">Product <span>Total</span></div>
                                <% let j=0; for(item of items) {%>
                                    <ul class="checkout__total__products">
                                        <li>
                                            <%= j+1 %>. <%=item.product[0].name %>
                                                    <%=item.itemSize%>
                                                        X <%= item.itemQuantity %>
                                                            <span>
                                                                <%= item.product[0].price*item.itemQuantity %>
                                                            </span>
                                        </li>
                                    </ul>
                                    <% j++; } %>
                                        <ul class="checkout__total__all">
                                            <!-- <li>Subtotal <span>$750.99</span></li> -->
                                            <li>Total <span id="totalAmount" value="<%=grandTotal %>">â‚¹
                                                    <%= grandTotal %>
                                                </span></li>
                                        </ul>
                                        <div class="checkout__input__checkbox">
                                            <label for="COD">
                                                Cash on Delivery
                                                <input type="radio" id="COD" name="paymentType" value="COD" checked>
                                                <span class="checkmark"></span>
                                            </label>
                                        </div>
                                        <div class="checkout__input__checkbox">
                                            <label for="razorpay">
                                                Razorpay
                                                <input type="radio" id="razorpay" name="paymentType" value="razorpay">
                                                <span class="checkmark"></span>
                                            </label>
                                        </div>
                                        <button type="submit" class="site-btn">PLACE ORDER</button>
                            </div>
                        </div>
                        </form>

                    </div>
                </div>
        </section>
        <!-- modal start add address -->
        <div class="modal fade" id="myModal">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Add address</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <!-- Modal body -->
                    <div class="modal-body">
                        <form action="/addressPost" method="post">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Name<span>*</span></p>
                                        <input type="text" id="name" name="name">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Address<span>*</span></p>
                                        <input type="text" id="address" name="address">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Town<span>*</span></p>
                                        <input type="text" id="town" name="town">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>State<span>*</span></p>
                                        <input type="text" id="state" name="state">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Country<span>*</span></p>
