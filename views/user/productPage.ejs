                                                            style="border:none;background:none;"><img
                                                                src="/user/img/icon/heart.png" alt="">
                                                        </button></li>
                                                    <% }else{ %>
                                                        <li><button id="<%= item._id %>" type="button" style="padding: 0;
                                                            border: none;
                                                            background: none;"
                                                                onclick="wishlistAdd(event,'<%= item._id %>')"><img
                                                                    src="/user/img/icon/heart.png" alt="">
                                                            </button></li>


                                                        <% } %>

                                            </ul>
                                        </div>
                                        <div class="product__item__text">
                                            <h6>
                                                <%= item.name %>
                                            </h6>
                                            <a href="/product/<%=item._id%>" class="add-cart">+ Add To Cart</a>
                                            <div class="rating">
                                                <span>Brands:
                                                    <%=item.brand[0].name %>

                                                </span>
                                               
                                                <br>
                                                <span>Material :
                                                    <%= item.material[0].name %> 
                                                </span>
                                            </div>
                                            <h5 class="productPrice">
                                                <%= item.price %> â‚¹
                                            </h5>
                                        </div>
                                    </div>

                                </div>

                                <% } %>



